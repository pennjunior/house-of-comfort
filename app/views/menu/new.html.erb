<%= simple_form_for @menu_item, url: create_menu_path do |f| %>
<div class="form-group">
  <%= f.input :name %>
</div>
<div class="form-group">
  <%= f.input :price %>
</div>
<div class="form-group">
  <%= f.input :category %>
</div>
<div class="form-group">
  <%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
